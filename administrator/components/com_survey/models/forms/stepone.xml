<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_survey/models/fields" >
		<field name="id" type="text" default="0"
			readonly="true" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" />

		<field name="title" type="text" label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC" class="inputbox" size="30"
			required="true" />

		<field name="make" type="text" label="COM_SURVEY_MAKE"
			description="COM_SURVEY_MAKE" class="inputbox" size="30"
			required="true" />

		<field name="model" type="text" label="COM_SURVEY_MODEL"
			description="COM_SURVEY_MODEL" class="inputbox" size="30"
			required="false" />

		<field name="year" type="text" label="COM_SURVEY_YEAR"
			description="COM_SURVEY_YEAR" class="inputbox" size="30"
			required="false" />

		<field name="article" type="text" label="COM_SURVEY_ARTICLE"
			description="COM_SURVEY_ARTICLE" class="inputbox" size="30"
			required="false" />

		<field name="price" type="text" label="COM_SURVEY_PRICE"
			description="COM_SURVEY_PRICE" class="inputbox" size="30"
			required="false" />

		<field name="description" type="editor" buttons="true" hide="pagebreak,readmore"
			class="inputbox"
			filter="JComponentHelper::filterText"
			label="JGLOBAL_DESCRIPTION" description="COM_WEBLINKS_FIELD_DESCRIPTION_DESC" />

		<field name="category_id" type="text" label="COM_SURVEY_CATEGORY"
			description="COM_SURVEY_CATEGORY_DESC" class="inputbox" size="30"
			required="true" />
		
		<field
			name="image"
			type="media"
			label="COM_SURVEY_IMAGE"
			description="COM_SURVEY_IMAGE_DESC"
			required="true" />
				
	</fieldset>
</form>
