<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_room/models/fields" >
		<field name="id" type="text" default="0"
			readonly="true" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" />

		<field name="title" type="text" label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC" class="inputbox" size="30"
			required="true" />

		<field name="make" type="text" label="COM_ROOM_MAKE"
			description="COM_ROOM_MAKE" class="inputbox" size="30"
			required="true" />

		<field name="model" type="text" label="COM_ROOM_MODEL"
			description="COM_ROOM_MODEL" class="inputbox" size="30"
			required="false" />

		<field name="year" type="text" label="COM_ROOM_YEAR"
			description="COM_ROOM_YEAR" class="inputbox" size="30"
			required="false" />

		<field name="article" type="text" label="COM_ROOM_ARTICLE"
			description="COM_ROOM_ARTICLE" class="inputbox" size="30"
			required="false" />

		<field name="price" type="text" label="COM_ROOM_PRICE"
			description="COM_ROOM_PRICE" class="inputbox" size="30"
			required="false" />

		<field name="description" type="editor" buttons="true" hide="pagebreak,readmore"
			class="inputbox"
			filter="JComponentHelper::filterText"
			label="JGLOBAL_DESCRIPTION" description="COM_WEBLINKS_FIELD_DESCRIPTION_DESC" />

		<field name="category_id" type="text" label="COM_ROOM_CATEGORY"
			description="COM_ROOM_CATEGORY_DESC" class="inputbox" size="30"
			required="true" />
		
		<field
			name="image"
			type="media"
			label="COM_ROOM_IMAGE"
			description="COM_ROOM_IMAGE_DESC"
			required="true" />
				
	</fieldset>
</form>
