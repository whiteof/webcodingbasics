<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.1" method="upgrade">
	<name>com_survey</name>
	<author>WhiteOf Corp</author>
	<creationDate>March 2016</creationDate>
	<copyright>(C) 2012 - 2016 WhiteOf, Corp. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see	LICENSE.txt</license>
	<authorEmail>info@whiteof.com</authorEmail>
	<authorUrl>www.whiteof.com</authorUrl>
	<version>1.0.0</version>
	<description>COM_SURVEY_XML_DESCRIPTION</description>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<files folder="site">
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>survey.php</filename>
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	<languages folder="site">
		<language tag="en-GB">language/en-GB.com_survey.ini</language>
	</languages>
	<administration>
		<menu img="class:survey">com_survey</menu>
		<submenu>
			<menu link="option=com_survey&amp;view=stepone" view="stepone" img="class:survey"
				alt="Survey/Stepone">com_survey_stepone</menu>		
		</submenu>
		<files folder="admin">
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>survey.php</filename>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB.com_survey.ini</language>
			<language tag="en-GB">language/en-GB.com_survey.sys.ini</language>
		</languages>
	</administration>
</extension>